<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="de.frank_durr.ecdhcurve25519test.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView android:id="@+id/label_alice_secret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_alice_secret"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView android:id="@+id/alice_secret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/label_alice_secret" />

    <TextView android:id="@+id/label_bob_secret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_bob_secret"
        android:layout_below="@+id/alice_secret"
        android:layout_alignParentLeft="true" />

    <TextView android:id="@+id/bob_secret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_bob_secret"
        android:layout_alignParentLeft="true" />

</RelativeLayout>
